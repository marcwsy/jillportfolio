extends layout

block content
  h1.flex.justify-center.align-center.py-2 Edit
  .container.flex.justify-center.py-5.px-5
    .page.bg-page.text-dark.py-5.px-5.border-radius
        .container
          form(method='POST' action='')
            div.form-group
              label(for='first_name') First Name:
              input#title.form-control(type='text', placeholder='First name' name='first_name' required='true' value=(undefined===first_name ? '' : first_name) )
            div.form-group
              label(for='last_name') Last Name:
              input#title.form-control(type='text', placeholder='Last name' name='last_name' required='true' value=(undefined===last_name ? '' : last_name) )
            div.form-group
              label(for='skills') Skills:
              input#title.form-control(type='text', placeholder='Skills' name='skills' required='true' value=(undefined===skills ? '' : skills) )
            div.form-group
              label(for='adobe') Adobe:
              input#title.form-control(type='text', placeholder='Adobe skills' name='adobe' rows='4' required='true' value=(undefined===adobe ? '' : adobe) )
            div.form-group
              label(for='maya') Maya:
              input#title.form-control(type='text', placeholder='Maya skills' name='maya' rows='4' required='true' value=(undefined===maya ? '' : maya) )
            div.form-group
              label(for='unreal') Unreal Engine:
              input#title.form-control(type='text', placeholder='Unreal Engine skills' name='unreal' rows='5' required='true' value=(undefined===unreal ? '' : unreal) )
            div.form-group
              label(for='zbrush') Zbrush :
              input#title.form-control(type='text', placeholder='Zbrush skills' name='zbrush' rows='5' required='true' value=(undefined===zbrush ? '' : zbrush) )
            div.form-group
              label(for='about_me') About Me:
              textarea#summary.form-control(type='text', placeholder='About Me' name='about_me' rows='10' required='true') #{undefined===about_me ? '' : about_me}
            div.form-group
              label(for='phone_number') Phone Number:
              input#title.form-control(type='text', placeholder='Phone number' name='phone_number' required='true' value=(undefined===phone_number ? '' : phone_number) )
            div.form-group
              label(for='email') Email:
              input#title.form-control(type='text', placeholder='Email' name='email' required='true' value=(undefined===email ? '' : email) )
            button.btn.btn-primary.btn-shadow.margin-top-xsm(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
